<?xml version="1.0"?>
<SyntaxDefinition name="Cottle" xmlns="http://icsharpcode.net/sharpdevelop/syntaxdefinition/2008">
  <Color name ="Body text" fontFamily="Georgia" foreground="DarkSlateGray"/>
  <Color name="Comment" foreground="Green" fontStyle="italic"/>
  <Color name="Code" fontFamily="Consolas" foreground="Firebrick"/>
  <Color name="Keyword" fontFamily="Consolas" foreground="Blue" />
  <Color name="Delimiter" fontFamily="Consolas" foreground="Blue"/>
  <Color name="Literals" fontFamily="Consolas" foreground="Purple"/>

  <!-- This is the main ruleset. -->
  <RuleSet>
    <!-- escape sequences -->
    <Span begin="\\" end="."/>

    <!-- comments -->
    <Span color="Comment" multiline="true" begin="{_" end="}"/>

    <!-- code -->
    <Span color="Code" fontFamily="Consolas" multiline="true">
      <Begin color="Delimiter">{</Begin>
      <End color="Delimiter">}</End>
      <RuleSet>

        <Rule color="Delimiter">
          [{|:}]
        </Rule>

        <!-- String literals are treated as body text and reference this file's main ruleset -->
        <Span color="Body text" ruleSet="">
          <Begin>"</Begin>
          <End>"</End>
        </Span>

        <!-- Same for single-quoted strings -->
        <Span color="Body text" ruleSet="">
          <Begin>'</Begin>
          <End>'</End>
        </Span>

        <Keywords color="Keyword">
          <Word>if</Word>
          <Word>elif</Word>
          <Word>else</Word>
          <!-- ... -->
        </Keywords>

        <!-- Digits -->
        <Rule color="Literals">
          (    \d+(\.[0-9]+)?   #number with optional floating point
          |    \.[0-9]+         #or just starting with floating point
          )
        </Rule>

        <!-- Other literals-->
        <Keywords color="Literals">
          <Word>true</Word>
          <Word>false</Word>
          <Word>void</Word>
        </Keywords>

      </RuleSet>
    </Span>

  </RuleSet>
</SyntaxDefinition>
